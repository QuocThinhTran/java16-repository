	<script>
	function confirmDelete(event) {
		  event.preventDefault();

		  // Sử dụng SweetAlert để hiển thị thông báo hỏi bạn có muốn xóa
		  Swal.fire({
		    title: 'Xác nhận xóa',
		    text: 'Bạn có chắc chắn muốn xóa khách hàng này?',
		    icon: 'warning',
		    showCancelButton: true,
		    confirmButtonText: 'Xóa',
		    cancelButtonText: 'Hủy'
		  }).then(function(result) {
		    if (result.isConfirmed) {
		      // Nếu bạn click Xóa
		      var customerId = event.target.getAttribute('1');

		      // Gửi yêu cầu xóa khách hàng đến server (có thể sử dụng AJAX)

		      // Hiển thị thông báo xóa thành công
		      Swal.fire({
		        title: 'Xóa thành công',
		        text: 'Khách hàng đã được xóa thành công.',
		        icon: 'success',
		        timer: 2000,
		        showConfirmButton: false
		      }).then(function() {
		        // Thực hiện các thao tác khác (nếu cần)
		      });
		    }
		  });
		}
	</script>
